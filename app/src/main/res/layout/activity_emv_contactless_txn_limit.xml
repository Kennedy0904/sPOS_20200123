                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="#c0c0c0" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

