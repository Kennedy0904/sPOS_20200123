<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_columnSpan="1"
    grid:alignmentMode="alignBounds"
    grid:columnCount="3"
    grid:rowOrderPreserved="true"
    grid:useDefaultMargins="true">

    <RelativeLayout
        android:id="@+id/citiBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_background"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill"
        grid:layout_rowWeight="1" >

        <ImageView
            android:id="@+id/ic_citibank"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/citibank" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_citibank"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Citi Bank" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/publicBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_background"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill"
        grid:layout_rowWeight="1" >

        <ImageView
            android:id="@+id/ic_publicBank"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_publicBank"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Public Bank" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/maybank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_background"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill"
        grid:layout_rowWeight="1" >

        <ImageView
            android:id="@+id/ic_maybank"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/maybank" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_maybank"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Maybank" />

    </RelativeLayout>

    <RelativeLayout
