        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_scb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="SC Bank" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cimb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
