<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Card_Insert_Swipe_Tap_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:weightSum="10">

        <RelativeLayout
            android:id="@+id/insert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/icon_background"
            android:padding="1dp">

            <ImageView
                android:id="@+id/ic_insert"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/insert_card_2"/>

            <TextView
                android:id="@+id/txtInsert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_insert"
                android:background="#1296e2"
                android:gravity="center_horizontal"
                android:padding="3dp"
                android:text="Insert"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <RelativeLayout
            android:id="@+id/swipe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/icon_background"
            android:padding="1dp">

            <ImageView
                android:id="@+id/ic_swipe"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/swipe_card_2"/>

            <TextView
                android:id="@+id/txtSwipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_swipe"
                android:background="#1296e2"
                android:gravity="center_horizontal"
                android:padding="3dp"
                android:text="Swipe"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </RelativeLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />


        <RelativeLayout
            android:id="@+id/tap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/icon_background"
            android:padding="1dp">

            <ImageView
                android:id="@+id/ic_tap"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/tap_card_2"/>

            <TextView
                android:id="@+id/txtTap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_tap"
                android:background="#1296e2"
                android:gravity="center_horizontal"
                android:padding="3dp"
                android:text="Tap"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Swipe Left For Manual Entry"
        android:layout_marginTop="8dp"/>

</LinearLayout>